{
    "compilerOptions": {
        "jsxImportSource": "@emotion/react",
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": true,
        "jsx": "react-jsx",
        "lib": ["dom", "esnext"], // ["dom", "es5", "scripthost", "es2017.object"],
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "strict": true,
        "strictNullChecks": true,
        "outDir": "../../output/browser",
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "useDefineForClassFields": true, //for mobx v6 https://mobx.js.org/migrating-from-4-or-5.html#getting-started
        "noEmit": true,
        // "types": [
        //     "vite/client",
        //     "vite-plugin-svgr/client",
        //     "vitest/globals",
        //     "@emotion/react/types/css-prop"
        // ],
        "plugins": [
            {
                "name": "typescript-styled-plugin",
                "lint": {
                    "validProperties": ["label"]
                }
            }
        ],
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules", "typings"],
    "include": ["src", "src/components/statistics/dom-to-image-more.d.ts"]
}
